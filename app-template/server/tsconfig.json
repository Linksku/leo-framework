{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "paths": {
      "*": [
        "app/server/*",
        "app/shared/*",
        "framework/server/*",
        "framework/shared/*",
      ],
    },
    "types": [
      "webpack-env",
      "node",
    ],
  },
  "include": [
    ".",
    "../shared/types",
    "../../framework/server/types",
    "../../framework/shared/types",
  ],
  "exclude": [
    "../../framework/server/types/__generated__",
    "../../framework/shared/types/__generated__",
  ],
}
