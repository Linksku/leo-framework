{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
    ],
    "jsx": "react",
    "paths": {
      "*": [
        "app/web/*",
        "app/shared/*",
        "framework/web/*",
        "framework/shared/*",
      ],
    },
  },
  "include": [
    ".",
    "../shared/types",
    "../../framework/web/types",
    "../../framework/shared/types",
  ],
  "exclude": [
    "../../framework/web/types/__generated__",
    "../../framework/shared/types/__generated__",
  ],
}
