{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2019", "dom", "dom.iterable"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    // todo: mid/mid noImplicitAny: true and move all JS files to a new folder with new tsconfig
    "noImplicitAny": false,
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "types": ["node"],
    "jsx": "react",
  },
  "include": [
    ".",
    "**/.*"
  ]
}
